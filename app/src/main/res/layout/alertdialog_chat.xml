<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popupbck"
    >
    <RelativeLayout
        android:id="@+id/rel_cross"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:background="@drawable/crosswhite"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="1dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.zoptal.eauction.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/linr_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:dividerHeight="2dp"
            android:divider="@android:color/transparent"
            android:layout_marginBottom="100dp">

        </ListView>

        <RelativeLayout
            android:id="@+id/rel_send"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/textfieldborder2"
            android:layout_alignParentBottom="true">



            <ImageView
                android:id="@+id/tv_send"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/send_button"
              />



            <com.zoptal.eauction.common.EditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="Type here"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/tv_send"
                android:singleLine="true"
                android:gravity="top|left"
                android:imeOptions="actionDone"
                android:background="@android:color/transparent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#a9a9a9"/>


        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>
    </com.zoptal.eauction.common.InteractiveScrollView>
</LinearLayout>



