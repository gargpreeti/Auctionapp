<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_buyer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pro_pic_dummy"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/img_buyer"
        android:background="@drawable/yellow_chatback">

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/tv_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"/>

    </RelativeLayout>


</RelativeLayout>


