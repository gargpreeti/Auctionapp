<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_content_fragment">


    <RelativeLayout
        android:id="@+id/rel_productdesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="130dp"
        android:layout_below="@+id/rel_headr"
        android:background="@drawable/dropdown_details">





        <ImageView
            android:id="@+id/img_arrowdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/arrow" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_marginTop="20dp"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:background="@mipmap/fream2"
            android:layout_centerHorizontal="true"/>





        <RelativeLayout
            android:id="@+id/rel_day"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40dp"
            android:background="@mipmap/days_button">


            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />

            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_hour"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/days_button">


            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />

            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOURS"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/days_button">


            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />

            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINUTS"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_secnd"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/days_button">


            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />

            <com.zoptal.eauction.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECONDS"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_below="@+id/rel_secnd"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.7"
            android:layout_marginTop="5dp"/>

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/txt_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCT NAME: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/view_top"
            />

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/tv_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMSUNG GALAXY"
            android:textColor="#808080"
            android:textSize="14dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txt_productname"
            android:layout_below="@+id/view_top"
            />

        <View
            android:id="@+id/view_pname"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_below="@+id/txt_productname"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.7"
            android:layout_marginTop="5dp"/>

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORY: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/view_pname"
            />

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELECTRONICS"
            android:textColor="#808080"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txt_productname"
            android:layout_below="@+id/view_pname"
            />

        <View
            android:id="@+id/view_category"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_below="@+id/txt_category"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.7"
            android:layout_marginTop="5dp"/>


        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/view_category"
            />

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Condition"
            android:textColor="#808080"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txt_productname"
            android:layout_below="@+id/view_category"
            />

        <View
            android:id="@+id/view_desc"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_below="@+id/txt_desc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.7"
            android:layout_marginTop="5dp"/>

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/txt_openprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPENING PRICE: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/view_desc"
            />

        <com.zoptal.eauction.common.MyTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="133 K.D"
            android:textColor="#808080"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txt_productname"
            android:layout_below="@+id/view_desc"
            />

        <View
            android:id="@+id/view_openprice"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_below="@+id/txt_openprice"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.7"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/view_openprice"
            android:background="@drawable/dummyimg1"/>


        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/view_openprice"
            android:background="@drawable/dummyimg2"/>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:layout_below="@+id/view_openprice"
            android:background="@drawable/dummyimg1"/>

    </RelativeLayout>



</LinearLayout>